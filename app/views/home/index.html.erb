<h1>Welcome to Vacation.com!</h1>

<%= form_tag listings_path, method: :get do %>
  <div class="field">
    <%= label_tag 'location', 'Location' %>
    <%= text_field_tag 'location', params[:location] %>
  </div>

  <div class="field">
    <%= label_tag 'availability', 'Available' %>
    <%= check_box_tag 'availability', '1', params[:availability] %>
  </div>

  <%= submit_tag 'Search' %>
<% end %>

<h2>Listings</h2>
<ul>
  <% @listings.each do |listing| %>
    <li>
      <%= link_to listing.title, listing %> <br>
      Property Type: <%= listing.property_type %> <br>  
      Price: $<%= listing.price %> per night <br>
      Location: <%= listing.location %>
    </li>
  <% end %>
</ul>

<%= link_to "Create New Listing", new_listing_path %>
