<h1>Edit Review</h1>

<%= form_with(model: @review, url: review_path(@review), method: :patch) do |form| %>
  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 5 %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <%= form.submit "Update Review" %>
<% end %>
