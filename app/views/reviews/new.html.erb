<h1>Create a New Review</h1>

<%= form_with(model: @review, url: reviews_path) do |form| %>
  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 5 %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %> <!-- Assuming you have a current_user method for authentication -->
  
  <%= form.submit "Create Review" %>
<% end %>
