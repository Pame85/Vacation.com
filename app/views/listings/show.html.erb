<h1><%= @listing.title %></h1>

<div>
  <strong>Property Type:</strong> <%= @listing.property_type %>
</div>

<div>
  <strong>Price:</strong> $<%= @listing.price %>
</div>

<div>
  <strong>Location:</strong> <%= @listing.location %>
</div>

<div>
  <strong>Description:</strong> <%= @listing.description %>
</div>

<div>
  <strong>Number of Rooms:</strong> <%= @listing.rooms %>
</div>

<div>
  <strong>Capacity:</strong> <%= @listing.capacity %>
</div>

<div>
  <strong>Available:</strong> <%= @listing.available? ? 'Yes' : 'No' %>
</div>

<div>
  <strong>Average Rating:</strong> <%= @listing.average_rating %>
</div>

<%= link_to 'Edit', edit_listing_path(@listing) %> |
